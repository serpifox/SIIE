<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.insidedeveloper.siie.Inicio_Sesion">
    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            app:srcCompat="@drawable/udg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText

                    android:id="@+id/edtUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/gradienteditext"
                    android:drawableLeft="@drawable/ic_lightbulb_outline_black_24dp"
                    android:drawablePadding="10dp"
                    android:drawableTint="#fff"
                    android:hint="usario"
                    android:textColorHint="#fff"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edtContrasenia"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/edtUsuario"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/gradienteditext"
                    android:drawableLeft="@drawable/ic_lightbulb_outline_black_24dp"
                    android:drawablePadding="10dp"
                    android:drawableTint="#fff"
                    android:hint="contraseÃ±a"
                    android:inputType="textPassword"
                    android:textColorHint="#fff" />

                <Button
                    android:id="@+id/btnMateria"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtContrasenia"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/gradienteditext"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="ingresar"
                    android:textColor="#fff" />

                <ProgressBar
                    android:id="@+id/progreso"
                    style="?android:attr/progressBarStyleLargeInverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btnMateria"
                    android:visibility="gone"
                    android:layout_alignLeft="@+id/btnMateria"
                    android:layout_marginBottom="17dp"
                    android:layout_marginLeft="28dp" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>